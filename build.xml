<project name="splunk-sdk-java" basedir="." default="build">

    <property name="dir.build" location="build"/>
    <property name="dir.build.examples" location="${build}/examples"/>
    <property name="dir.build.splunk" location="${build}/splunk"/>
    <property name="dir.build.test" location="${build}/test"/>
    <property name="dir.dist" location="dist"/>
    <property name="dir.src" location="src"/>
    <property name="dir.src.examples" location="${dir.src}/examples"/>
    <property name="dir.src.splunk" location="${dir.src}/java/main"/>
    <property name="dir.src.test" location="${dir.src}/test"/>

    <target name="build" depends="dist"/>

    <target name="compile">
        <mkdir dir="${dir.build.splunk}"}
        <javac 
         srcdir="${dir.src.splunk}"
         destdir="${dir.build.splunk}"/>
    </target>

    <target name="dist" depends="compile">
        <mkdir dir="${dir.dist}"/>
        <jar 
         destfile="${dir.dist}/splunk.jar"
         includes="${dir.build.splunk}/**/*.class"/>
    </target>

    <target name="clean">
        <delete dir="${dir.build}"/>
        <delete dir="${dir.dist}"/>
    </target>

    <target name="units"></target>
</project>
